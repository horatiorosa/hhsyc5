<!-- Page Content -->
    <div class="container">
        <p id="notice"><%= notice %></p>

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">HHSYC - Administrators View
                    <!-- <small>founded in 2001</small> -->
                </h1>
                <ol class="breadcrumb">
                    <li><%=link_to 'Admin Home Page', adminfisher_path %>
                    </li>  
                    <ul>
                          <li class="go-right">
                              <%= link_to "Logout", destroy_admin_session_path, class: "active", method: :delete %>
                             </li>
                     </ul>
                    </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
                <%= render 'shared/sidebar_admin' %>
            <!-- Content Column -->
            <div class="col-md-9">
                <div class="stylestatic">
                    <div class="post_wrapper">
                        <div >
                           <%= image_tag @blog.image_url(:medium).to_s %>    
                        </div>
                        <h3 >
                            <%= @blog.blog_title %>
                        </h3>
                            <p >
                            Submitted <%= time_ago_in_words(@blog.created_at) %> ago.
                            | &nbsp; <%= link_to 'Back', blogs_path %>&nbsp;
                            <% if admin_signed_in? %>
                        |   &nbsp; <%= link_to 'Edit', edit_blog_path(@blog) %>&nbsp;
                        |    &nbsp; <%= link_to 'Delete', blog_path(@blog),method: :delete, data: { confirm: 'Are you sure?'} %>
                            <% end %>
                            </p>
                            <p >
                                <%= simple_format(@blog.blog_body) %>
                            </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <hr>
    </div>

