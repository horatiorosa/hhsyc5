<p id="notice"><%= notice %></p>

 <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">HHSYC - Administrators View
                    <!-- <small>founded in 2001</small> -->
                </h1>
                <ol class="breadcrumb">
                    <li><%=link_to 'Admin Home Page', adminfisher_path %>
                    </li>  
                    <ul>
                          <li class="go-right">
                              <%= link_to "Logout", destroy_admin_session_path, class: "active", method: :delete %>
                           </li>
                     </ul>
                   </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
                <%= render 'shared/sidebar_admin' %>
            <!-- Content Column -->
            <div class="col-md-9">
              <div class="stylestatic">
                <h3>Announcements Listing</h3>
                <table>
                  <thead>
                    <tr>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                    <tbody>
                      <% @announcements.each do |announcement| %>
                        <tr>
                          <td><%= link_to announcement.ann_title, announcement %></td>
                          <td><%= announcement.created_at.strftime("%b %d, %Y - %I:%M %p") %></td>
                          <td><%= link_to 'View', announcement %></td>
                          <% if admin_signed_in? %>
                          <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
                          <td><%= link_to 'Delete', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
                <%= link_to 'New Event Post', new_announcement_path %>
              </div>  
            </div>
        </div>
        <!-- /.row -->

        <hr class="featurette-divider">

